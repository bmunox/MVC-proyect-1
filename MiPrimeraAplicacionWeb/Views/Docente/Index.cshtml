
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/cssPropio.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />

<h2>Docente</h2>
<label>Ingrese modalidad contrato</label>
<select id="cboTipoModalidad">
</select>
<br>
<!-- Trigger the modal with a button -->
<button type="button" onclick="abrirModal(0)" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Agregar</button>
<div id="tabla">

</div>

<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Mantenimiento Docente</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%;margin:auto">
                    <tr>
                        <td width="40%">ID Docente</td>
                        <td width="60%"><input class="borrar" id="txtIdDocente" type="text" readonly /></td>
                    </tr>
                    <tr>
                        <td>Nombre Docente</td>
                        <td><input class="borrar obligatorio" id="txtNombre" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Apellido Paterno</td>
                        <td><input class="borrar obligatorio" id="txtapPaterno" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Apellido Materno</td>
                        <td><input class="borrar obligatorio" id="txtapMaterno" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Direccion</td>
                        <td><input class="borrar obligatorio" id="txtdireccion" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Telefono Celular</td>
                        <td><input class="borrar obligatorio" id="txttelefonoCelular" type="number" /></td>
                    </tr>
                    <tr>
                        <td>Telefono fijo</td>
                        <td><input class="borrar obligatorio" id="txttelefonoFijo" type="number" /></td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td><input class="borrar obligatorio" id="txtEmail" type="email" /></td>
                    </tr>
                    <tr>
                        <td>Sexo</td>
                        <td><select class="borrar obligatorio" id="cboSexoPopup"></select></td>
                    </tr>
                    <tr>
                        <td>Fecha Contrato</td>
                        <td><input class="borrar obligatorio" id="dtFechaContrato" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Modalidad Contrato</td>
                        <td><select class="borrar obligatorio" id="cboModalidadContratoPopup"></select></td>
                    </tr>
                    <tr>
                        <td>Foto</td>
                        <td><img id="imgFoto" width="150" height="100" style="border:1px solid"/></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input class="borrar" type="file" value="..." id="btnFoto" /></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button onclick="Agregar()" id="btnAceptar" type="button" class="btn btn-success">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/Docente.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<script src="~/Scripts/datatables.min.js"></script>