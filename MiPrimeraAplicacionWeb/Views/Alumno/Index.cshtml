
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/cssPropio.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />

<h2>Alumno</h2>
<label>Ingrese nombre alumno</label>
<input type="text" id="txtnombre" />
<br />
<label>Seleccione sexo</label>
<select id="cboSexo">
</select>
<input type="button" id="btnBuscar" value="Buscar" class="btn-success" />
<input type="button" id="btnLimpiar" value="Limpiar" class="btn-primary" />
<br>
<!-- Trigger the modal with a button -->
<button type="button" onclick="abrirModal(0)" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Agregar</button>

<div id="tabla">

</div>
<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Mantenimiento Alumno</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%;margin:auto">
                    <tr>
                        <td width="40%">ID Alumno</td>
                        <td width="60%"><input class="borrar" id="txtIdAlumno" type="text" readonly /></td>
                    </tr>
                    <tr>
                        <td>Nombre Alumno</td>
                        <td><input class="borrar obligatorio" id="txtNombre" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Apellido Paterno</td>
                        <td><input class="borrar obligatorio" id="txtapPaterno" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Apellido Materno</td>
                        <td><input class="borrar obligatorio" id="txtapMaterno" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Fecha Nacimiento</td>
                        <td><input class="borrar obligatorio" id="dtFechaNacimiento" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Sexo</td>
                        <td><select class="borrar obligatorio" id="cboSexoPopup"></select></td>
                    </tr>
                    <tr>
                        <td>Telefono Padre</td>
                        <td><input class="borrar obligatorio" id="txttelefonoPadre" type="number" /></td>
                    </tr>
                    <tr>
                        <td>Telefono Madre</td>
                        <td><input class="borrar obligatorio" id="txttelefonoMadre" type="number" /></td>
                    </tr>
                    <tr>
                        <td>Numero Hermanos</td>
                        <td><input class="borrar obligatorio" id="txtnumeroHermanos" type="text" /></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button onclick="Agregar()" id="btnAceptar" type="button" class="btn btn-success">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/Alumno.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
